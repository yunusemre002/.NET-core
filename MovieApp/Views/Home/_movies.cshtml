@model IEnumerable<Movie>


@foreach (var moviem in Model)
{
   <div class="card mb-3">
    <div class="row no-gutter">
        <div class="col-md-3">
                <img src="~/img/@moviem.ImageUrl" alt="@moviem.Description" class="card-img">
        </div>
        <div class="col-md-9">
            <div class="card-body">
                <h5 class="card-title">@moviem.Name</h5>
                <p class="card-text">
                    @moviem.Description
                </p>
                <p class="card-text">
                    <small class="text-muted">3 days ago</small>
                </p>
            </div>
        </div>
    </div>
 </div>
}

